<Window x:Class="GameDatabase_App.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameDatabase_App"
        mc:Ignorable="d"
        Title="Magnum opus"
        Width="370" Height="300" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <Label Content="Логин:"/>
        <TextBox  x:Name="Login"/>
        
        <Label Content="Пароль:"/>
        <PasswordBox x:Name="Password"/>
        
        <Label Name="InvalidLogOrPassHint" 
               Foreground="Red" 
               Content="Введен неверный логин или пароль" 
               Visibility="Hidden"/>
        <Button Content="Вход" 
                Click="LoginButton_Click" 
                IsDefault="True" 
                Padding="5"/>
        <Button Content="Войти с помощью Windows аутентификации" Padding="5" Margin="0 5" Click="Button_Click"/>
    </StackPanel>
</Window>
